<% layout('_layouts/admin_layout') %>

<h3>Edit A Page</h3>

<a href="/dashboard/pages" class="btn btn-primary">
  Pages Index
</a>


<form action="/dashboard/pages/edit/<%= id %>" method="POST">
  <div class="form-group">
    <input type="text" name="title" value="<%= title %>" class="form-control" placeholder="Title">
  </div>
  <div class="form-group">
    <input type="text" name="url" value="<%= url %>" class="form-control" placeholder="URL">
  </div>
  <div class="form-group">
    <textarea name="content" id="editor" rows="10" class="form-control" placeholder="Content"><%= content %></textarea>
  </div>

  <div class="form-group">
    <button class="btn btn-primary">
      Save Page
    </button>
  </div>
</form>
