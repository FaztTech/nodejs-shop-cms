<% layout('_layouts/admin_layout') %>

<h3>Edit A Category</h3>

<a href="/dashboard/categories" class="btn btn-primary">
  Categories Index
</a>


<form action="/dashboard/categories/edit/<%= _id %>" method="POST">
  <div class="form-group">
    <input type="text" name="title" value="<%= title %>" class="form-control" placeholder="Title">
  </div>
  <div class="form-group">
    <button class="btn btn-primary">
      Save Page
    </button>
  </div>
</form>
